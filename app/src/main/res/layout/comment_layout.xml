<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4A4848"
        android:id="@+id/topView"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/topView"
        android:src="@drawable/avatar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/commentorPhoto"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/commentorPhoto"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:padding="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/commentName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment text is here"
            android:maxHeight="270dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:id="@+id/comment"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:layout_below="@id/linearLayout"
        android:maxLines="1"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/commentorPhoto"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textColor="#006699"
        android:id="@+id/replyBtn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#605A5A"
        android:layout_below="@id/replyBtn"
        android:layout_marginTop="8dp"
        android:id="@+id/bottomView"/>


</RelativeLayout>