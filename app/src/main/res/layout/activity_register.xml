<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterActivity"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">



        <TextView
            android:id="@+id/creatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create A New Account"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill the form to create a new account"
            android:layout_below="@id/creatxt"
            android:textColor="@color/colorPrimary"
            android:id="@+id/fillform"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username_register"
            android:hint="Username..."
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:layout_below="@id/fillform"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/square_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_register"
            android:hint="Email..."
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_below="@id/username_register"
            android:background="@drawable/square_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_register"
            android:hint="Password"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="13dp"
            android:layout_below="@id/email_register"
            android:background="@drawable/square_background"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmPassword"
            android:hint="Confirm Password..."
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:inputType="textWebPassword"
            android:layout_marginTop="20dp"
            android:layout_below="@id/password_register"
            android:padding="10dp"
            android:background="@drawable/square_background"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_Btn"
            android:text="Create Account"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@id/confirmPassword"
            android:textColor="#fff"
            android:padding="13dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_Btn"
            android:text="Already have an account? Log IN"
            android:layout_marginTop="20dp"
            android:background="#ffffffff"
            android:layout_below="@id/register_Btn"
            android:textColor="#000"
            android:padding="13dp"
            android:textStyle="bold"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            android:layout_below="@id/login_Btn"
            android:layout_alignParentBottom="true"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>



</ScrollView>